# Set burger
export TURTLEBOT3_MODEL=burger
# Start Ros on PC
roscore
# on bot
# Set burger
export TURTLEBOT3_MODEL=burger
# start bot
roslaunch turtlebot3_bringup turtlebot3_robot.launch
#start raspicam
roslaunch raspicam_node camerav2_410x308_30fps.launch

